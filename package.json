{
  "name": "metrika-charts-monorepo",
  "author": "Metrika Inc",
  "private": true,
  "scripts": {
    "clean": "node ./scripts/os-clean-all.js",
    "reset": "pnpm run clean && pnpm install",
    "build": "pnpm run metrika-charts:build && pnpm run storybook:build",
    "metrika-charts:build": "cd packages/metrika-charts && pnpm run build",
    "metrika-charts:watch": "cd packages/metrika-charts && pnpm run watch",
    "storybook:start": "cd packages/storybook && pnpm run storybook",
    "storybook:build": "cd packages/storybook && pnpm run build-storybook"
  },
  "workspaces": {
    "packages": [
      "packages/metrika-charts",
      "packages/storybook"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
