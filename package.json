{
  "name": "metrika-charts-monorepo",
  "author": "Metrika Inc",
  "private": true,
  "scripts": {
    "reset": "pnpm run clean && pnpm install",
    "clean": "node ./scripts/os-clean-all.js",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "charts:build": "pnpm run --filter metrika-charts build",
    "charts:watch": "pnpm run --filter metrika-charts watch",
    "storybook:start": "pnpm run --filter storybook start",
    "storybook:build": "pnpm run --filter storybook build",
    "outdated" : "pnpm -r outdated"
  },
  "workspaces": {
    "packages": [
      "packages/metrika-charts",
      "packages/storybook"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
